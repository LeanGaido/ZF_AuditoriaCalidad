@page "/procesos"
@inject IRepositorio repositorio
@attribute [Authorize]
@inject HttpClientConToken Http

<ListadoGenerico Listado="Procesos">
    <HayRegistrosCompleto>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Area</th>
                    <th>Proceso</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Procesos)
                {
                    <tr>
                        <td>
                            @*<a href="Auditorias/@item.ID" class="btn btn-success"><ion-icon name="folder-open"></ion-icon></a>*@
                            <AuthorizeView Roles="Administrador">
                                <button @onclick="@(() => BorrarProceso(item))" class="btn btn-danger"><ion-icon name="trash"></ion-icon></button>
                            </AuthorizeView>
                        </td>
                        <td>@item.Area.Descripcion</td>
                        <td>@item.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </HayRegistrosCompleto>
</ListadoGenerico>

<Confirmacion MostrarConfirmacion="Mostrar"
              Titulo="@Titulo"
              onCancel="CerrarConfirmacion"
              onConfirm="@(() => ConfirmacionBorrarProceso(Proceso))">
    <ChildContent>
        <div class="form-group">
            <label>Area:</label>
            <div>
                <input readonly class="form-control" value="@Proceso.Area.Descripcion" />
            </div>
        </div>

        <div class="form-group">
            <label>Proceso:</label>
            <div>
                <input readonly class="form-control" value="@Proceso.Descripcion" />
            </div>
        </div>
    </ChildContent>
</Confirmacion>

@code {
    public List<Proceso> Procesos { get; set; }
    private Proceso Proceso = new Proceso();

    private bool Mostrar = false;
    private string Titulo = "";

    private async Task Cargar(int pagina = 1)
    {
        var responseHttp = await repositorio.Get<List<Proceso>>($"api/procesos");
        if (!responseHttp.Error)
        {
            Procesos = responseHttp.Response;
            //var conteo = responseHttp.HttpResponseMessage.Headers.GetValues("conteo").FirstOrDefault();
            //paginasTotales = int.Parse(responseHttp.HttpResponseMessage.Headers.GetValues("totalPaginas").FirstOrDefault());
        }
    }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            await Cargar();
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

    private async Task CerrarConfirmacion()
    {
        Proceso = null;
        Titulo = "";
        Mostrar = false;
    }

    private async Task BorrarProceso(Proceso proceso)
    {
        Titulo = "Esta seguro de eliminar este Proceso?";
        Proceso = proceso;
        Mostrar = true;
    }

    async void ConfirmacionBorrarProceso(Proceso proceso)
    {
        if(proceso != null)
        {
            var responseHttp = await repositorio.Delete($"api/procesos/{proceso.ID}");
            if (!responseHttp.Error)
            {
                await CerrarConfirmacion();
                await Cargar();
            }
            else
            {
                await Cargar();
            }
        }
        else
        {
            await CerrarConfirmacion();
            await Cargar();
        }
    }
}
