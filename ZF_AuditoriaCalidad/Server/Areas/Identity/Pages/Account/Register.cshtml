@page
@model RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta de Usuario a un Auditor";
    Layout = null;
}
<style>
    BODY {
        background-image: linear-gradient( 180deg, rgb(5, 39, 103) 0%, #047cc4 70%);
        font-family: "Tahoma", verdana, arial;
        font-size: 12px;
        margin: auto;
        margin-top: 30px;
    }

    #capa_titulo_login {
        background: url(../extranet_archivos/titulo_login.png);
        font-family: "Tahoma", verdana, arial;
        height: 100px;
        margin: auto;
        width: 540px;
    }

    #capa_cuerpo_login {
        background-color: #fff;
        border-radius: 10px;
        color: #000;
        margin: auto;
        padding: 10px 20px 20px 20px;
        width: 500px;
    }

    input {
        background-color: #0079DC;
        border-radius: 5px;
        color: #FFF;
        height: 20px;
        width: 250px;
    }

    .boton {
        height: 40px;
        width: 141px;
    }

    .textoblanco {
        font: 9pt tahoma, verdana, Arial, sans-serif;
        color: #FFFFFF;
        text-align: justify;
    }

    .tituloBlanco {
        font: 20pt tahoma, verdana, Arial, sans-serif;
        color: #FFFFFF;
        text-align: justify;
    }

    .subtituloBlanco {
        font: 14pt tahoma, verdana, Arial, sans-serif;
        color: #FFFFFF;
        text-align: justify;
    }

    .link {
        color: #333;
        text-decoration: none;
    }

    .center {
        text-align: center
    }

    .enlaces {
        text-decoration: none;
        font-size: 14px;
        color: black;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Legajo</label>
                <select class="form-control" asp-for="Input.Legajo">
                    @foreach (var auditor in Model.Auditores)
                    {
                        <option value="@auditor.Value">@auditor.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
